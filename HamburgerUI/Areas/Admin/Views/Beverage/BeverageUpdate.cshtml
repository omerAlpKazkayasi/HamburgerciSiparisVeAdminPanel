@model Entities.Concrete.Product

@{
    ViewData["Title"] = "Beverage Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <form asp-action="BeverageUpdate" method="post" class="col-md-6 mx-auto border p-4 rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="ID" value="@Model.ProductId" />

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            
        </div>

        <div class="mb-3">
            <label for="menuAdi" class="form-label" asp-for="ImagePath">Resim Yolu</label>
                            <input type="text" asp-for="ImagePath" class="form-control" required />
                            
                             <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>