                                        <li>
                                            <a href="#" class="menu-item"><i class="fas fa-bars"></i></a>
                                        </li> *@


                                           <li>
                                            <a asp-action="UserUpdate" asp-controller="User">Bilgilerimi Güncelle</a>
                                        </li>


                                        <li>
                                            <a asp-action="Logout" asp-controller="Account">Logout</a>
                                        </li>



                                    @* </ul> *@

                                }
                                else
                                {
                                    <li>
                                        <a class="shopping-cart" href="/Account/Login">Login <i class="fas fa-user text-white"></i></a>
                                    </li>
                                }
                            </ul>

                            @*  <div class="header-icons"> *@

                            @* </div> *@


                            <a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
                            <div class="mobile-menu"></div>
                            <!-- menu end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end header -->
    @RenderBody()
    <!-- search area -->
