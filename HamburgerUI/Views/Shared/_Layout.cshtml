                                {
                                    <li>
                                        <a asp-action="OrderDetails" asp-controller="OrderDetails">Geçmiş Siparişler</a>
                                    </li>


                                    <li>
                                        <a class="shopping-cart" href="/Product/CreateCart"><i class="fas fa-shopping-cart text-white"></i></a>

                                    </li>
                                    <li>

                                        <a class="mobile-hide search-bar-icon" href="#"><i class="fas fa-search text-white"></i></a>
                                    </li>



